<Window x:Class="WpfAppScraper.ActionChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppScraper"
        mc:Ignorable="d"
        Title="Action Choice" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" FontSize="16" TextWrapping="Wrap">
            Would you like to scrape data from the website
            or continue with the already loaded data?
        </TextBlock>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="0,30,0,0">
            <Button Content="Scrape Data" Width="200" Height="40" Click="OnParseDataClick" Margin="0,0,0,10"/>
            <Button Content="Use Existing Data" Width="200" Height="40" Click="OnUseExistingDataClick"/>
        </StackPanel>
    </Grid>
</Window>
