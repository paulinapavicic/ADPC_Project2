<Window x:Class="WpfAppScraper.StartupChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppScraper"
        
        mc:Ignorable="d"
        Title="Selection" Height="350" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Welcome to the TCGA Data Pipeline" FontWeight="Bold" FontSize="18" Margin="0,0,0,16"/>
            <Button Content="Download and Process New TCGA Data" Height="40" Width="300" Click="OnDownloadClick"/>
            <Button Content="Use Existing Data" Height="40" Width="300" Click="OnUseExistingClick"/>
            <Button Content="Import Clinical Data" Height="40" Width="300" Click="OnImportClinicalClick"/>
            <ProgressBar x:Name="progressBar" Height="20" Width="300" Margin="0,10,0,0" Visibility="Collapsed"/>
            <TextBox x:Name="txtLog" Height="60" Width="300" Margin="0,10,0,0" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>
